@model SampleApplication.Models.AccountModel.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<h2>Login</h2>
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
<table width="100%" height="100%" cellpadding="0" cellspacing="0">
        <tr>
            <td valign="top" style="height: 30px;">&nbsp;</td>
        </tr>
        <tr>
            <td padding: 50px; height: 100%" valign="center">
                <div id="container_login">
                    <div id="login_content">
                        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
                        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
                        @using (Html.BeginForm())
                        {            
                            <table width="500" style="margin: 0 auto;">
                                <tr>
                                    <td colspan="3">@Html.ValidationSummary(true)
                                    </td>
                                </tr>
                                <tr>
                                    <td valign="top">
                                        @Html.LabelFor(m => m.UserName)
                                        <br />
                                        @Html.TextBoxFor(m => m.UserName, new { tabindex = 2 })
                                        <br />
                                        @Html.ValidationMessageFor(m => m.UserName)
                                    </td>
                                    <td valign="top">
                                        @Html.LabelFor(m => m.Password)
                                        <br />
                                        @Html.PasswordFor(m => m.Password, new { tabindex = 3 })
                                        <br />
                                        @Html.ValidationMessageFor(m => m.Password)
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <button type="submit">Submit</button>
                                    </td>
                                </tr>
                            </table>            
                        }
                    </div>

                </div>
            </td>
        </tr>
    </table>
